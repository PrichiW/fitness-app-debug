<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/workoutListFragment">

    <fragment
        android:id="@+id/workoutListFragment"
        android:name="com.testtask.fitnesstest.presentation.videoplayer.WorkoutListFragment"
        android:label="Тренировки"
        tools:layout="@layout/fragment_workout_list">
        <action
            android:id="@+id/action_workoutListFragment_to_videoPlayerFragment"
            app:destination="@id/videoPlayerFragment" />
    </fragment>

    <fragment
        android:id="@+id/videoPlayerFragment"
        android:name="com.testtask.fitnesstest.presentation.workoutlist.VideoPlayerFragment"
        android:label="Видео тренировки"
        tools:layout="@layout/fragment_video_player">

        <argument
            android:name="workout"
            app:argType="com.testtask.fitnesstest.domain.model.Workout" />
    </fragment>
</navigation>